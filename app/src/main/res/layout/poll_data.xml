<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:elevation="10dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/poll_data_name"
            android:text="2019 Election"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textFontWeight="@android/"
            />
        <TextView
            android:id="@+id/poll_data_desc"
            android:text="Lets Vote to find out our new President."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/tertiary_text_light"
            android:maxLines="2"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:id="@+id/poll_data_createdby"
            android:text="- Created By Ridhav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:padding="6dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>